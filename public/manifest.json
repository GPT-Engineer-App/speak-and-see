{
  "manifest_version": 3,
  "name": "Microphone and Video Permission Extension",
  "version": "1.0",
  "description": "A Chrome extension that requests permissions to use the microphone and video.",
  "permissions": [
    "microphone",
    "camera"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}